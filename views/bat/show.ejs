<%- include('../layouts/main', { body: ` <div class="row mt-4">
    <div class="col-md-12 mb-4">
        <a href="/bats" class="btn btn-secondary mb-3">
            <i class="fas fa-arrow-left"></i> Back to All Bats
        </a>
    </div>

    <div class="col-md-5">
        <img src="<%= bat.image %>" class="img-fluid rounded" alt="<%= bat.brandName %>">
    </div>

    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h2>
                    <%= bat.brandName %>
                </h2>
            </div>

            <div class="card-body">
                <p class="card-text">
                    <%= bat.desc %>
                </p>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <p><strong>Price:</strong> â‚¹<%= bat.price %>
                        </p>
                        <p><strong>Brand Ambassador:</strong>
                            <%= bat.brandAmbassador %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Date Added:</strong>
                            <%= bat.createdAt.toLocaleDateString() %>
                        </p>
                    </div>
                </div>

                <% if(locals.user) { %>
                    <div class="mt-4">
                        <a href="/bats/<%= bat._id %>/edit" class="btn btn-primary">Edit</a>
                        <form action="/bats/<%= bat._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this bat?')">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>
    </div>
    ` }) %>